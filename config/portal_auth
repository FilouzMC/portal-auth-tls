config portal_auth 'general'
        # Identifiant utilisé pour le portail captif
        option portal_user ''

        # Mot de passe du portail captif
        option portal_pass ''

        # Webhook Discord pour les alertes (laisser vide pour désactiver)
        option discord_webhook ''

        # URL de base du portail captif
        # Tu peux la laisser comme valeur par défaut si elle ne change pas
        option base_url 'https://exemple.com'

        # Fichier d'état simple (ONLINE / OFFLINE)
        option state_file '/tmp/portal_auth_state'

        # Fichier avec un statut détaillé (CODE|Message) pour l'affichage LuCI
        option status_file '/tmp/portal_auth_status'

        # Dossier où sont installés les scripts sur le routeur
        option install_dir '/root/scripts'
